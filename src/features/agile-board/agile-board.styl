.agile-board {
  /*the width of the columns has not changed*/
  table-layout: fixed;
}

.agile-board__container {
  height: 700px;
}
/*naming like BEM*/
.agile-board__column {
  background: url('grid.png') repeat 0 0;
  border-left: 9px solid #fff;
  width: 400px;
  padding-top: 5px !important;
  padding-left: 10px !important;
  padding-right: 10px !important;
  padding-top: 5px !important;
}

.agile-board__menu {
  float: right;
}

.agile-board__menu-item {
  cursor: pointer;
  margin-left: 5px;
}

.agile-board__task {
  padding: 0;
  margin-top: 7px;
  background-color: white;
  border: 1px solid #b4b4b4;
  cursor: move;
  &_disable {
    border: 0;
  }
}

.agile-board__task-btn-container {
  float: right;
  padding-top: 3px;
  padding-right: 5px;
  &_disable {
    display : none;
  }
}

.agile-board__task-edit-btn {
   padding: 0;
   margin-left: 5px;
   background: none;
   color: none;
   border: none;
   cursor: pointer;
 }

.agile-board__task-edit-btn:hover {
  padding: 0;
  margin-left: 5px;
  background: none;
  border: none;
  color: red;
}

.agile-board__task-ref{
  float: left;
  color: #64992C!important;
}

.agile-board__task-title {
  padding: 5px 16px;
  color: #64992C!important;
  background: #ebf4dd;
  font-size: 12px;
}

.agile-board__task-title-separator {
  float: left;
  width: 1px;
  height: 11px;
  margin: 2px 6px 0;
  background: #b4b4b4;
}

.agile-board__task-header {
  padding: 5px 16px;
  font-size: 14px;
}

.agile-board__task-descr {
  padding-left: 16px;
  padding-right: 8px;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 12px;
  color: #6e6e6e;
  word-wrap: break-word;
}
